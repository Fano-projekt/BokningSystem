@{
    ViewData["Title"] = "Logga in";
    Layout = "_Layout";
    var roll = Context.Request.Query["roll"].ToString().ToLower();
}

<link rel="stylesheet" href="~/css/Bokning.css" asp-append-version="true" />

<div class="login-wrapper">
    <div class="login-container">
        <h2>Logga in @(ViewBag.Roll == "patient" ? "som Patient" : "som Admin")</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert-error">@ViewBag.Error</div>
        }

        <form asp-controller="Bokning" asp-action="Login" method="post">
            <div class="form-group">
                <label for="username"> E-post <span>*</span></label>
                <input type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label for="password">Lösenord <span>*</span></label>
                <input type="password" id="password" name="password" required />
            </div>

            <div class="form-actions">
                <a href="#" class="forgot-password">Glömt lösenord?</a>
                <button type="submit">Logga in</button>
            </div>
        </form>

    </div>
</div>
